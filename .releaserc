{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "conventionalcommits",
      "releaseRules": [
        {"type": "feat", "release": "minor"},
        {"type": "fix", "release": "patch"},
        {"type": "perf", "release": "patch"},
        {"type": "refactor", "release": "patch"},
        {"type": "docs", "release": false},
        {"type": "style", "release": false},
        {"type": "chore", "release": false},
        {"type": "ci", "release": false},
        {"breaking": true, "release": "major"}
      ]
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "feat", "section": "âœ¨ Features"},
          {"type": "fix", "section": "ðŸ› Bug Fixes"},
          {"type": "perf", "section": "âš¡ Performance"},
          {"type": "refactor", "section": "â™»ï¸ Refactoring"},
          {"type": "docs", "section": "ðŸ“ Documentation", "hidden": true},
          {"type": "chore", "hidden": true},
          {"type": "ci", "hidden": true}
        ]
      }
    }],
    ["@semantic-release/github", {
      "assets": [
        {"path": "ReTyper-macOS-universal.dmg", "label": "ReTyper-macOS-universal.dmg"},
        {"path": "ReTyper-macOS-universal.zip", "label": "ReTyper-macOS-universal.zip"}
      ]
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "echo ${nextRelease.version} > .version && /usr/libexec/PlistBuddy -c 'Set :CFBundleShortVersionString ${nextRelease.version}' ReTyper.app/Contents/Info.plist && /usr/libexec/PlistBuddy -c 'Set :CFBundleVersion ${nextRelease.version}' ReTyper.app/Contents/Info.plist && cp -R ReTyper.app/Contents/Info.plist dmg_contents/ReTyper.app/Contents/Info.plist && rm -f ReTyper-macOS-universal.dmg ReTyper-macOS-universal.zip && hdiutil create -volname ReTyper -srcfolder dmg_contents -ov -format UDZO ReTyper-macOS-universal.dmg && zip -r ReTyper-macOS-universal.zip ReTyper.app"
    }]
  ],
  "tagFormat": "v${version}"
}
